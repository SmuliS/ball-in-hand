.row
  .small-2.large-12.columns
    .new-game.center
      =link_to 'New Game', new_game_path, class: 'button', style: "width:70%"
.row
  .small-2.large-12.columns
    .rating-table.center
      %h4 Ratings table
      %table.center
        %thead
          %tr
            %th{:width => "50"} Ranging
            %th{:width => "200"} Player
            %th{:width => "100"} Rating
            %th{:width => "150"} Games Played
        %tbody
          - @players.each_with_index do |player, index|
            %tr
              %td= index+1
              %td
                %a{href: "players/#{player.id}"}= player.name
              %td= player.rating
              %td= player.games_played

